<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/welcome_slide_img_height_weidth"
            android:layout_height="@dimen/welcome_slide_img_height_weidth"
            android:src="@drawable/welcomefirst" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/slide_one_text"
            android:textColor="@color/black"
            android:textSize="@dimen/welcome_slide_txt_size"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"

            />

    </LinearLayout>


</RelativeLayout>