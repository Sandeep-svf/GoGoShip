<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:padding="10dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingRight="20dp"
        android:background="@drawable/sea_air_land_back"
        android:paddingBottom="10dp"
        >



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"
            android:text="TR-#123456"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:id="@+id/prod_no"
            />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:text="Country"
            android:id="@+id/country"
           app:layout_constraintRight_toLeftOf="@+id/country_value"
            android:layout_marginTop="20dp"
            android:textColor="@color/light_gray"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginRight="10dp"
            />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginEnd="10dp"
          android:text="Transit"
          android:textColor="@color/light_gray"
          android:id="@+id/country_value"
          app:layout_constraintTop_toTopOf="parent"
          android:layout_marginTop="20dp"
          app:layout_constraintEnd_toStartOf="@+id/country_pic"
          />


        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/country_pic"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/turkeylogo"
            android:layout_marginStart="10dp"

            />


        <View
            android:layout_width="300dp"
            android:layout_height=".1dp"
            app:layout_constraintTop_toBottomOf="@+id/country"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/view_check"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/view_check"
          app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:text="Ordered From"
            android:textColor="@color/yellow"
            android:id="@+id/order_from"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/view_check"
           app:layout_constraintStart_toEndOf="@+id/order_from"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:text="M.alibaba.com"
            android:textColor="@color/black"
            android:id="@+id/order_from_value"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/order_from"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:text="Date and Time"
            android:textColor="@color/yellow"
            android:id="@+id/date_time"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/order_from"
            app:layout_constraintStart_toEndOf="@+id/date_time"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:text="21-02-2021/11:27AM"
            android:textColor="@color/black"
            android:id="@+id/date_time_value"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/date_time"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:text="Product Link"
            android:textColor="@color/yellow"
            android:id="@+id/product_link"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/date_time"
            app:layout_constraintStart_toEndOf="@+id/product_link"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:text="https://m.alb..."
            android:singleLine="true"
            android:textColor="@color/black"
            android:id="@+id/product_link_value"
            />


        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintTop_toBottomOf="@+id/date_time"
            app:layout_constraintStart_toEndOf="@+id/product_link_value"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/edit"
            app:tint="@color/yellow" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/product_link"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            android:text="Quantity"
            android:textColor="@color/yellow"
            android:id="@+id/quantity"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/product_link"
            app:layout_constraintStart_toEndOf="@+id/quantity"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:text="1"
            android:textColor="@color/black"
            android:id="@+id/quantity_value"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/product_link"
            app:layout_constraintStart_toEndOf="@+id/quantity_value"
            android:layout_marginTop="15dp"
            android:layout_marginStart="20dp"
            android:text="Color"
            android:textColor="@color/yellow"
            android:id="@+id/color"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/product_link"
            app:layout_constraintStart_toEndOf="@+id/color"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:text="Black"
            android:textColor="@color/black"
            android:id="@+id/color_value"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/product_link"
            app:layout_constraintStart_toEndOf="@+id/color_value"
            android:layout_marginTop="15dp"
            android:layout_marginStart="30dp"
            android:text="Size"
            android:textColor="@color/yellow"
            android:id="@+id/size"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/product_link"
            app:layout_constraintStart_toEndOf="@+id/size"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:text="M"
            android:textColor="@color/black"
            android:id="@+id/size_value"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/quantity"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            android:text="Total"
            android:textColor="@color/yellow"
            android:id="@+id/total"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/quantity"
            app:layout_constraintStart_toEndOf="@+id/total"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:text="$42.00"
            android:textColor="@color/black"
            android:id="@+id/total_value"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/quantity"
          app:layout_constraintStart_toEndOf="@+id/total_value"
            android:layout_marginTop="15dp"
            android:layout_marginStart="30dp"
            android:text="Cost"
            android:textColor="@color/yellow"
            android:id="@+id/cost"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/quantity"
            app:layout_constraintStart_toEndOf="@+id/cost"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:text="$32.00"
            android:textColor="@color/black"
            android:id="@+id/cost_value"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/quantity"
            app:layout_constraintStart_toEndOf="@+id/cost_value"
            android:layout_marginTop="15dp"
            android:layout_marginStart="30dp"
            android:text="Fees"
            android:textColor="@color/yellow"
            android:id="@+id/fees"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/quantity"
            app:layout_constraintStart_toEndOf="@+id/fees"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:text="$10.00"
            android:textColor="@color/black"
            android:id="@+id/fees_value"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/total"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            android:text="Coupon Code"
            android:textColor="@color/yellow"
            android:id="@+id/coupon_code"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/total"
            app:layout_constraintStart_toEndOf="@+id/coupon_code"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:text="No"
            android:textColor="@color/black"
            android:id="@+id/coupone_value"
            />




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/total"
           app:layout_constraintStart_toEndOf="@+id/coupone_value"
            android:layout_marginTop="15dp"
            android:layout_marginStart="40dp"
            android:text="Insurance"
            android:textColor="@color/yellow"
            android:id="@+id/insurance"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/total"
            app:layout_constraintStart_toEndOf="@+id/insurance"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:text="No"
            android:textColor="@color/black"
            android:id="@+id/insu_value"
            />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:layout_constraintTop_toBottomOf="@+id/coupon_code"
          app:layout_constraintStart_toStartOf="parent"
          android:layout_marginTop="15dp"
          android:layout_marginStart="15dp"
          android:text="Status"
          android:textColor="@color/yellow"
          android:id="@+id/status"
          />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:layout_constraintTop_toBottomOf="@+id/coupon_code"
          app:layout_constraintStart_toEndOf="@+id/status"
          android:layout_marginTop="15dp"
          android:layout_marginStart="10dp"
          android:text="Delivered"
          android:textColor="#FF0000"
          android:id="@+id/status_val"

          />



    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>