<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/my_order_top_view_height"
        android:background="@color/yellow"
        android:id="@+id/cons_currancy"
        app:layout_constraintTop_toTopOf="parent"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/support"
            android:textSize="@dimen/my_order_top_view_text_size"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <ImageView
            android:layout_width="@dimen/my_order_top_view_img_weidth_height"
            android:layout_height="@dimen/my_order_top_view_img_weidth_height"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/support"
            android:layout_marginEnd="40dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/cons_currancy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:text="@string/support_text"
        android:textSize="@dimen/currency_top_text_size"
        android:textColor="@color/black"
        android:gravity="center"
        android:id="@+id/currany_text_summary"
        />


       <androidx.cardview.widget.CardView
           android:layout_width="@dimen/support_facebook_width"
           android:layout_height="@dimen/support_facebook_height"
           app:cardCornerRadius="5dp"
           app:cardElevation="10dp"
           android:background="@color/cream_color"
           app:layout_constraintTop_toBottomOf="@+id/currany_text_summary"
          app:layout_constraintStart_toStartOf="parent"
           android:layout_marginStart="50dp"
           android:layout_marginTop="20dp"
           android:id="@+id/card_facebook"
           >
           
           <androidx.constraintlayout.widget.ConstraintLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:background="@color/cream_color"
               >
               
               <ImageView
                   android:layout_width="@dimen/support_facebook_img_logo_width_height"
                   android:layout_height="@dimen/support_facebook_img_logo_width_height"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintTop_toTopOf="parent"
                   android:layout_marginTop="5dp"
                   android:src="@drawable/fb"
                   android:id="@+id/img_facebook"
                   />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   app:layout_constraintTop_toBottomOf="@+id/img_facebook"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintEnd_toEndOf="parent"
                   android:text="Facebook"
                   android:textColor="@color/light_gray"
                   android:textSize="@dimen/support_facebook_text"
                   />

               
           </androidx.constraintlayout.widget.ConstraintLayout>
           
       </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/support_facebook_width"
        android:layout_height="@dimen/support_facebook_height"
        app:cardCornerRadius="5dp"
        app:cardElevation="10dp"
        android:background="@color/cream_color"
        app:layout_constraintTop_toBottomOf="@+id/currany_text_summary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/card_insta"
        android:layout_marginTop="20dp"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/cream_color"
            >

            <ImageView
                android:layout_width="@dimen/support_facebook_img_logo_width_height"
                android:layout_height="@dimen/support_facebook_img_logo_width_height"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="5dp"
                android:src="@drawable/insta"
                android:id="@+id/img_insta"
                android:padding="5dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/img_insta"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="@string/instagram"
                android:textColor="@color/light_gray"
                android:textSize="@dimen/support_facebook_text"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>




    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/support_facebook_width"
        android:layout_height="@dimen/support_facebook_height"
        app:cardCornerRadius="5dp"
        app:cardElevation="10dp"
        android:background="@color/cream_color"
        app:layout_constraintTop_toBottomOf="@+id/currany_text_summary"
       app:layout_constraintEnd_toEndOf="parent"
       android:layout_marginEnd="50dp"
        android:layout_marginTop="20dp"
        android:id="@+id/card_whatsapp"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/cream_color"
            >

            <ImageView
                android:layout_width="@dimen/support_facebook_img_logo_width_height"
                android:layout_height="@dimen/support_facebook_img_logo_width_height"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="5dp"
                android:src="@drawable/whatapps"
                android:id="@+id/img_whats_app"
                android:padding="5dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/img_whats_app"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="@string/whatsapp"
                android:textColor="@color/light_gray"
                android:textSize="@dimen/support_facebook_text"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/card_facebook"
        android:layout_marginTop="30dp"
        android:id="@+id/cons_lay_1"
        >





    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/suport_call_margin_start_end"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/call"
       android:id="@+id/call"
        />

    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/suport_call_margin_start_end"
        android:background="@drawable/circle_background"
        android:backgroundTint="@color/cream_color"
        android:id="@+id/copy_call"
        >

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/call_copy"

            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/support_call_txt_margin_start"
        app:layout_constraintStart_toEndOf="@+id/call"
        android:text="@string/or_call"
        android:textColor="@color/black"
        android:textSize="@dimen/or_call_txt_size"
        android:id="@+id/text_call"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/cons_lay_1"
        android:layout_marginTop="20dp"
        android:id="@+id/cons_bottom"
        >

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:layout_constraintStart_toStartOf="parent"
           android:layout_marginStart="@dimen/suport_call_margin_start_end"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/support_call"
            android:id="@+id/suppor_call"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/suppor_call"
            android:layout_marginStart="@dimen/support_call_txt_margin_start"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/or_open_support"
            android:textColor="@color/black"
            android:textSize="@dimen/or_call_txt_size"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/create_ticket_height"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/create_ticket_margin_end"
            android:background="@drawable/varify_border"
            android:id="@+id/cons_create_ticket1"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="@string/create_ticket"
                android:textColor="@color/black"
                android:textSize="@dimen/support_create_ticket_txt_size"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:id="@+id/create_ticket"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/have_no_support_ticket"
        app:layout_constraintTop_toBottomOf="@+id/cons_bottom"
        android:layout_marginTop="20dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:visibility="gone"
        >

        <View
            android:layout_width="@dimen/support_view_width"
            android:layout_height="1dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/yellow"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/have_no_support_ticket"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="@dimen/support_text_size"
            />

        <View
            android:layout_width="@dimen/support_view_width"
            android:layout_height="1dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/yellow"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/have_no_support_ticket"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="20dp"
        android:fillViewport="true"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >


            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/recycle_support_ticket"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>








</androidx.constraintlayout.widget.ConstraintLayout>