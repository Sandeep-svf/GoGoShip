<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_margin="7dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="10dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:backgroundTint="@color/light_green"
        app:cardCornerRadius="12dp"
        android:id="@+id/card_lay_1"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cons_processing_1"
            android:backgroundTint="@color/light_green"

            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/order_type_blue_border"
                android:layout_marginEnd="10dp"
                android:backgroundTint="@color/cream_color"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="15dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="@string/ticket_category"
                    android:textColor="@color/black"
                    android:id="@+id/tick_cate"
                    android:layout_marginTop="25dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@+id/tick_cate"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="Cancel order"
                    android:textColor="@color/light_gray"
                    android:id="@+id/tick_cate_val"
                   android:layout_marginStart="10dp"
                    android:layout_marginTop="25dp"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tick_cate"
                    android:text="@string/ticket_opening"
                    android:textColor="@color/black"
                    android:id="@+id/tick_opn"
                    android:layout_marginTop="10dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/tick_cate_val"
                    app:layout_constraintStart_toEndOf="@+id/tick_opn"
                    android:layout_marginTop="10dp"
                    android:text="Cancel order"
                    android:textColor="@color/light_gray"
                    android:id="@+id/tick_opn_val"
                    android:layout_marginStart="5dp"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tick_opn"
                    android:text="@string/ticket_updating"
                    android:textColor="@color/black"
                    android:id="@+id/last_upd"
                    android:layout_marginTop="10dp"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/tick_opn_val"
                    app:layout_constraintStart_toEndOf="@+id/last_upd"
                    android:layout_marginTop="10dp"
                    android:text="28/04/2022"
                    android:textColor="@color/light_gray"
                    android:id="@+id/last_upd_val"
                    android:layout_marginStart="5dp"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/last_upd"
                    android:text="@string/order_n"
                    android:textColor="@color/black"
                    android:id="@+id/ticket_order_no"
                    android:layout_marginTop="10dp"
                    android:visibility="gone"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/last_upd_val"
                    app:layout_constraintStart_toEndOf="@+id/ticket_order_no"
                    android:layout_marginTop="10dp"
                    android:text=""
                    android:textColor="@color/light_gray"
                    android:id="@+id/order_no_value"
                    android:layout_marginStart="5dp"
                    android:visibility="gone"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="@string/order_m"
                    android:textColor="@color/black"
                    android:id="@+id/ticket_order_msg"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/ticket_order_no"
                    android:visibility="gone"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@+id/ticket_order_msg"
                    android:layout_marginTop="10dp"
                    android:text=""
                    android:textColor="@color/light_gray"
                    android:id="@+id/ticket_order_msg_value"
                    android:layout_marginStart="5dp"
                    app:layout_constraintTop_toBottomOf="@+id/order_no_value"
                    android:visibility="gone"

                    />



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="pending"
                    android:textColor="@color/light_gray"
                    android:layout_marginTop="20dp"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/ticket_order_msg_value"
                   app:layout_constraintEnd_toEndOf="parent"
                    android:text="@string/detail"
                    android:textColor="@color/light_gray"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/ticket_detail"
                    android:visibility="gone"
                    />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>