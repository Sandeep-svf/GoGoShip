<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ForgetChangePassword">


    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_baseline_arrow_back_ios_24"
        android:scaleType="center"
        android:id="@+id/img_back"
        />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/update_password"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/border_color"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/txt_update_password"
            />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/txt_update_password"
            android:background="@drawable/edit_text_box"
            android:layout_marginTop="@dimen/register_otp_name_edt_margin_top"
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/cons_new_pass"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_centerInParent="true"
                android:background="@android:color/transparent"
                android:gravity="start"
                android:textColor="@color/border_color"
                android:textSize="@dimen/login_phone_edit_text_size"
                android:padding="@dimen/login_phone_edit_padding"
                android:hint="@string/new_pass"
                android:id="@+id/edt_new_pass"
                android:textColorHint="@color/border_color"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>




        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/cons_new_pass"
            android:background="@drawable/edit_text_box"
            android:layout_marginTop="@dimen/register_otp_name_edt_margin_top"
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/cons_confirm_pass"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_centerInParent="true"
                android:background="@android:color/transparent"
                android:gravity="start"
                android:textColor="@color/border_color"
                android:textSize="@dimen/login_phone_edit_text_size"
                android:padding="@dimen/login_phone_edit_padding"
                android:hint="@string/confirm_pass"
                android:id="@+id/edt_confirm_pass"
                android:textColorHint="@color/border_color"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="@dimen/register_otp_next_btn_width"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="@dimen/login_phone_edit_padding"
            app:layout_constraintTop_toBottomOf="@+id/cons_confirm_pass"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/login_phone_edit_margin_top"
            android:background="@drawable/varify_border"
            android:id="@+id/card_update_pass"
            >



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="@string/update"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="@color/black"
                android:textSize="@dimen/login_phone_edit_text_size"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>